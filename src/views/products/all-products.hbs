<div class="row">
    {{#each products}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/products/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                <p>{{price}} $ </p>
                <p>{{category}}</p>
                <p>{{ubication}}</p>
                <P>{{description}}</P>
                <form action="/products/delete/{{_id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-block btn-sm">
                    Delete
                </button>
                </form>
            </div>
         </div>
      </div>
    {{/each}}
</div>