<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Product</h3>
        </div>
        <div class="card-body">
            <form action="/products/new-product" method="POST">
               <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" autofocus >
               </div>
               <div class="form-group">
                   <input type="text" name="price" class="form-control" placeholder="Price  ($$$)" autofocus>
               </div>
                <div class="form-group">
                   <input type="text" name="category" class="form-control" placeholder="Category" autofocus>
               </div>
                <div class="form-group">
                   <input type="text" name="ubication" class="form-control" placeholder="Ubication" autofocus>
               </div>
               <div class="form-group">
                   <textarea name="description" placeholder="Description" class="form-control"></textarea>
               </div>
               <div class="form-group">
                   <button class="btn btn-primary btn-block">Save</button>
               </div>
            </form>
        </div>
    </div>
</div>